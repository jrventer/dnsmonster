FROM alpine:edge
LABEL maintainer "Rudolf Venter <mr.rudolf.venter@gmail.com>"

RUN apk add --no-cache libcap-static libpcap-dev linux-headers git go file --repository http://dl-cdn.alpinelinux.org/alpine/edge/testing/

RUN git clone https://github.com/jrventer/dnsmonster.git /opt/dnsmonster --depth 1 \
    && cd /opt/dnsmonster/src \
    && go build --ldflags "-L /usr/lib/libcap.a -linkmode external -extldflags \"-static\"" -o /tmp/dnsmonster-linux-amd64.bin


ENV CGO_ENABLED=1
ENV GOOS=windows
ENV GOARCH=amd64
RUN sh -c 'cd /opt/dnsmonster/src && go build -o /tmp/dnsmonster-windows-amd64.exe'